<section class="collection-proudct-wrpper">


<div class="container">
    <div class="row">

        {% for block in section.blocks %}  
        {% case block.type %}
        {% when 'collection' %}


            <div class="col-md-4">
                <div class="catalog-two-wrapper">
                
                
              
        
                  <div class="coll-or-pro">
                     <img src="{{ block.settings.img  | img_url:'' }}" alt="">
                 </div>
                 
                 <div class="collection-or-proudct">
                    <img src="{{ block.settings.img-02  | img_url:'' }}" alt="">
                 </div>
        
        
                </div>
        
             </div> 

             {% when 'proudct' %}

                <div class="col-md-4">
                    <div class="catalog-two-wrapper">
                    
                    
                  
            
                      <div class="coll-or-pro">
                         <img src="{{ block.settings.img  | img_url:'' }}" alt="">
                     </div>
                     
                     <div class="collection-or-proudct">
                        <img src="{{ block.settings.img-02  | img_url:'' }}" alt="">
                     </div>
            
            
                    </div>
            
                 </div> 
        {% endcase %} 


    {% endfor %}




    </div>
</div>
</section>


{% schema %}
    {
        "name": "Collection / proudct ",
        "class": "iamge-catalog",
        "settings": [
            {
                "type": "text",
                "id": "height",
                "label": "Select height",
                "default": "500"
            }
        ],
         "blocks": [
            {
                "type": "collection",
                "name": "collection",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "img"  ,
                        "label": "Select your big Image here"
                      },
                      {
                        "type": "image_picker",
                        "id": "img-02",
                        "label": "Small image here"
                      }
                ]
            },
            {
                "type": "product",
                "name": "product",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "img"  ,
                        "label": "Select your big Image here"
                      },
                      {
                        "type": "image_picker",
                        "id": "img-02",
                        "label": "Small image here"
                      }
                ]
            }
         ],
         
        "presets": [
            {
                "name": "Collection or proudct"
            }
        ]
    }
{% endschema %}


<style>
.catalog-two-wrapper{
 position: relative;
 margin: 15px 0;
}
.collection-or-proudct{
position: absolute;
top:0;
left:0;
width: 100%;
height: 100%;

}

.catalog-two-wrapper img {
    width: 100%;
    height:{{ section.settings.height }}px;
}
</style>